extends ../layout
block content
  .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
    h1.page-header All installation tasks
    div(style='width:600px;')
      table.table.table-striped.table-hover
        thead
          tr
            th Task name
        tbody
          each s in allSteps
            tr
              td
                a(href='#{s.route}')
                  =s.name
